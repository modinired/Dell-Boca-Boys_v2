# Spedines Agent - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7

# Local Qwen Model
QWEN_ENDPOINT=http://localhost:11434/v1
QWEN_MODEL=qwen2.5-coder:32b
QWEN_MAX_TOKENS=4096
QWEN_TEMPERATURE=0.1

# LLM Routing Strategy
# Options: draft_polish, ensemble, gemini_only, local_only
ROUTING_STRATEGY=draft_polish

# When to use Gemini (complexity threshold 0.0-1.0)
GEMINI_COMPLEXITY_THRESHOLD=0.6

# =============================================================================
# GOOGLE CLOUD INTEGRATION
# =============================================================================

# Service Account Credentials
GOOGLE_APPLICATION_CREDENTIALS=./config/service-account.json
GOOGLE_PROJECT_ID=your-project-id

# Google Sheets (for audit logging and training data)
GOOGLE_SHEET_ID=your_google_sheet_id_here
GOOGLE_SHEET_NAME=SpedinesAuditLog

# Google Drive (for learning materials ingestion)
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here
GOOGLE_DRIVE_WATCH_INTERVAL=3600  # Check every hour

# =============================================================================
# MEMORY SYSTEM
# =============================================================================

# ChromaDB Configuration
CHROMA_DB_PATH=./data/chromadb
CHROMA_COLLECTION_NAME=spedines_memory
ENABLE_MEMORY=true

# Embedding Model
# Options: openai, sentence-transformers, local
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Memory Retention
MAX_MEMORY_ENTRIES=100000
MEMORY_CLEANUP_DAYS=90

# RAG Configuration
RAG_TOP_K=5
RAG_MIN_SIMILARITY=0.7

# =============================================================================
# DATA INGESTION
# =============================================================================

# Financial Data Sources
ENABLE_FINANCIAL_DATA=true
FINANCIAL_API_KEY=your_alpha_vantage_key  # Or other finance API
FINANCIAL_SYMBOLS=AAPL,GOOGL,MSFT,AMZN
FINANCIAL_PULL_INTERVAL=86400  # Daily

# Scholarly Articles
ENABLE_SCHOLARLY_DATA=true
ARXIV_CATEGORIES=cs.AI,cs.CL,cs.LG
ARXIV_MAX_RESULTS=10
SCHOLARLY_PULL_INTERVAL=86400  # Daily

# RSS Feeds (comma-separated)
RSS_FEEDS=https://news.ycombinator.com/rss,https://arxiv.org/rss/cs.AI

# =============================================================================
# ACTIVITY TRACKING
# =============================================================================

# Privacy Settings
ENABLE_ACTIVITY_TRACKING=false
ACTIVITY_CONSENT_GIVEN=false
ACTIVITY_CONSENT_DATE=

# What to Track (if enabled)
TRACK_APP_USAGE=true
TRACK_WINDOW_TITLES=true
TRACK_ACTIVE_TIME=true
TRACK_SCREENSHOTS=false  # Requires explicit additional consent

# Storage
ACTIVITY_LOG_PATH=./data/activity_logs
ACTIVITY_LOG_ENCRYPTION=true
ACTIVITY_LOG_RETENTION_DAYS=30

# =============================================================================
# REFLECTION & LEARNING
# =============================================================================

# Daily Reflection
DAILY_REFLECTION_ENABLED=true
DAILY_REFLECTION_TIME=20:00  # 8 PM
REFLECTION_SUMMARY_LENGTH=comprehensive  # brief, detailed, comprehensive

# Training Data Collection
AUTO_COLLECT_TRAINING_DATA=true
TRAINING_DATA_QUALITY_THRESHOLD=4  # Min rating (1-5) for training
TRAINING_DATA_PATH=./data/training

# Fine-tuning
ENABLE_AUTO_FINETUNING=false  # Requires GPU and careful monitoring
FINETUNING_INTERVAL_DAYS=7
FINETUNING_METHOD=lora
FINETUNING_LEARNING_RATE=0.0001

# =============================================================================
# SANDBOX EXECUTION
# =============================================================================

# Sandbox Configuration
SANDBOX_ENABLED=true
SANDBOX_TYPE=subprocess  # subprocess or docker
SANDBOX_TIMEOUT=30  # seconds
SANDBOX_MAX_MEMORY_MB=512
SANDBOX_NETWORK_ALLOWED=false

# Docker Sandbox (if using docker)
SANDBOX_DOCKER_IMAGE=python:3.11-slim
SANDBOX_DOCKER_NETWORK=none

# =============================================================================
# API SERVER
# =============================================================================

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=1
API_RELOAD=false  # Set to true for development

# Security
API_KEY_REQUIRED=false
API_KEY=your_secure_api_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_PERIOD=60  # seconds

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_PATH=./logs
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TELEMETRY=false  # No external telemetry by default

# =============================================================================
# PERSONA CONFIGURATION
# =============================================================================

# Agent Identity
AGENT_NAME=Little Jim Spedines
AGENT_NICKNAME=Spedines
AGENT_ROLE=Hybrid AI Assistant

# Personality Settings (see config/persona.yaml for full customization)
PERSONALITY_STYLE=professional_playful
VERBOSITY=medium  # brief, medium, detailed
EMOJI_USAGE=minimal

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Caching
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
CACHE_PATH=./data/cache

# Database (optional - for production)
DATABASE_URL=sqlite:///./data/spedines.db
# DATABASE_URL=postgresql://user:pass@localhost/spedines

# Backup
AUTO_BACKUP_ENABLED=true
BACKUP_PATH=./data/backups
BACKUP_INTERVAL_DAYS=7
BACKUP_RETENTION_DAYS=30

# Development
DEBUG_MODE=false
PROFILE_PERFORMANCE=false
MOCK_EXTERNAL_APIS=false

# =============================================================================
# COST TRACKING
# =============================================================================

# Budget Management
GEMINI_MONTHLY_BUDGET_USD=100.00
GEMINI_COST_PER_1K_INPUT=0.00025
GEMINI_COST_PER_1K_OUTPUT=0.0005
ALERT_THRESHOLD_PERCENT=80

# Usage Tracking
TRACK_TOKEN_USAGE=true
TRACK_API_COSTS=true
COST_LOG_PATH=./data/costs

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Multi-Agent Collaboration (future)
ENABLE_MULTI_AGENT=false

# Voice Interface (future)
ENABLE_VOICE=false

# Vision Capabilities (future)
ENABLE_VISION=false
